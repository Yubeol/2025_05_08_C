//for3.c 구구단 출력
#include <stdio.h>

int main(void) {
	for (int i = 1; i <= 55; i++)printf("=");
	printf("\n");
	for (int i = 1; i <= 25; i++)printf(" ");
	printf("구구단");
	printf("\n");
	for (int i = 1; i <= 55; i++)printf("=");
	printf("\n");
	for (int i = 2; i < 10; i++)printf("  %ddan ", i);
	printf("\n");
	for (int i = 1; i <= 55; i++)printf("=");
	printf("\n");

	for (int i = 1; i <= 9; i++) { //행
		for (int j = 2; j <= 9; j++) { //열
			printf("%d*%d=%2d ", j, i, i*j);
		}
		printf("\n");
	}
	for (int i = 1; i <= 55; i++)printf("=");
	printf("\n");

	return 0;
}
